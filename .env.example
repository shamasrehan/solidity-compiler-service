# .env.example
# Copy this file to .env and customize the values

# Server configuration
PORT=9000
NODE_ENV=development                      # development, production, test

# Compiler settings
MAX_COMPILATION_TIME_MS=30000             # Maximum time in milliseconds for a compilation job
MAX_CONTRACT_SIZE_BYTES=1048576           # Maximum contract size in bytes (1MB)
DEFAULT_COMPILER_VERSION=0.8.19           # Default Solidity compiler version
DOCKER_TIMEOUT_MS=60000                   # Timeout for Docker operations (60 seconds)
SOLC_SELECT_TIMEOUT_MS=30000              # Timeout for solc-select operations (30 seconds)
CLEANUP_TEMP_FILES=true                   # Whether to clean up temporary files

# Directory paths (absolute paths recommended for production)
TEMP_DIR=./temp                           # Temporary directory for compilation jobs
ARTIFACTS_DIR=./artifacts                 # Directory to store compilation artifacts
CACHE_DIR=./cache                         # Directory for caching compilation results
SOLC_CACHE_DIR=./solc-cache              # Directory for caching solc compiler versions

# Cache settings
CACHE_EXPIRATION_MS=3600000               # Cache expiration time in milliseconds (1 hour)
SOLC_VERSION_CACHE_TIME_MS=86400000       # Solidity version cache time in milliseconds (24 hours)

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000                # Rate limit window in milliseconds (1 minute)
RATE_LIMIT_MAX_REQUESTS=30                # Maximum number of requests per window

# Logging
LOG_LEVEL=info                            # Log level (error, warn, info, debug, trace)
ENABLE_REQUEST_LOGGING=false              # Enable request logging with Morgan

# Security settings
ENABLE_CORS=true                          # Enable CORS for all origins
ALLOWED_ORIGINS=*                         # Comma-separated list of allowed origins for CORS
TRUST_PROXY=false                         # Trust the X-Forwarded-For header (when behind proxy)

# API Documentation
SWAGGER_ENABLED=true                      # Enable Swagger documentation
SWAGGER_PATH=/api-docs                    # Path for Swagger documentation