{
  "name": "solidity-compiler-api",
  "version": "1.0.0",
  "description": "API service for compiling and verifying Solidity contracts using Foundry",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "postinstall": "npm run install-solc-select",
    "install-solc-select": "pipx install solc-select && solc-select install 0.8.19 && solc-select use 0.8.19",
    "test": "mocha test/*.test.js",
    "test:api": "mocha test/api.test.js",
    "test:compile": "mocha test/compileController.test.js",
    "test:deps": "mocha test/dependencyUtils.test.js",
    "test:foundry": "mocha test/foundryUtils.test.js",
    "test:direct": "mocha test/directSolcCompiler.test.js",
    "test:solc": "mocha test/solcUtils.test.js",
    "test:integration": "mocha test/integration.test.js",

    "test:foundryInstallation": "mocha test/checkFoundryInstallation.test.js",
    "test:foundryDebug": "mocha test/foundryUtils.debug.test.js",
    "test:foundryIsolated": "mocha test/isolated.test.js",
    "test:foundryMockModule": "mocha test/foundryUtils.mock.test.js",
    "test:foundryRewire": "mocha test/foundryUtils.rewire.test.js"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "body-parser": "^1.20.2",
    "child_process": "^1.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "fs-extra": "^11.1.1",
    "morgan": "^1.10.0",
    "os": "^0.1.2",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "chai": "^4.5.0",
    "express": "^5.1.0",
    "mocha": "^10.8.2",
    "nodemon": "^3.0.1",
    "rewire": "^7.0.0",
    "sinon": "^20.0.0",
    "supertest": "^6.3.4"
  },
  "optionalDependencies": {
    "@chainlink/contracts": "^0.8.0",
    "@openzeppelin/contracts": "^4.9.3",
    "@uniswap/v2-core": "^1.0.1",
    "@uniswap/v2-periphery": "^1.1.0",
    "@uniswap/v3-core": "^1.0.1",
    "@uniswap/v3-periphery": "^1.4.3",
    "solady": "^0.0.123",
    "solmate": "^6.7.0"
  }
}
