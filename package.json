{
    "name": "smart-contract-compiler-api",
    "version": "1.0.0",
    "description": "A Node.js API service for compiling Solidity smart contracts using Foundry",
    "main": "src/server.js",
    "scripts": {
      "start": "node src/server.js",
      "dev": "nodemon src/server.js",
      "setup": "node setup.js",
      "setup:simple": "node setup-simple.js",
      "locate-foundry": "node locate-foundry.js",
      "preinstall-deps": "node scripts/preinstall-dependencies.js",
      "download-deps": "node scripts/download-dependencies.js",
      "test": "jest",
      "test:unit": "jest test/unit",
      "test:integration": "jest test/integration",
      "lint": "eslint src/",
      "postinstall": "node scripts/install-dependencies.js && node scripts/preinstall-dependencies.js"
    },
    "keywords": [
      "solidity",
      "smart-contracts",
      "foundry",
      "ethereum",
      "compiler"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
      "axios": "^1.6.2",
      "cors": "^2.8.5",
      "dotenv": "^16.3.1",
      "express": "^4.18.2",
      "express-validator": "^7.0.1",
      "fs-extra": "^11.1.1",
      "helmet": "^7.1.0",
      "morgan": "^1.10.0",
      "pino": "^8.15.0",
      "pino-pretty": "^10.2.0",
      "tmp-promise": "^3.0.3",
      "unzipper": "^0.10.14",
      "uuid": "^9.0.1"
    },
    "devDependencies": {
      "eslint": "^8.53.0",
      "jest": "^29.7.0",
      "nodemon": "^3.0.1",
      "supertest": "^6.3.3"
    },
    "engines": {
      "node": ">=18.0.0"
    }
  }