{
  "name": "solidity-compiler-api",
  "version": "1.0.0",
  "description": "API service for compiling and verifying Solidity contracts with support for concurrency and caching",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "postinstall": "npm run install-solc-select",
    "install-solc-select": "pipx install solc-select && solc-select install 0.8.19 && solc-select use 0.8.19",
    "test": "mocha test/*.test.js",
    "test:api": "mocha test/api.test.js",
    "test:compile": "mocha test/compileController.test.js",
    "test:deps": "mocha test/dependencyUtils.test.js",
    "test:foundry": "mocha test/foundryUtils.test.js",
    "test:direct": "mocha test/directSolcCompiler.test.js",
    "test:solc": "mocha test/solcUtils.test.js",
    "test:integration": "mocha test/integration.test.js",
    "test:foundryInstallation": "mocha test/checkFoundryInstallation.test.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean": "rimraf artifacts/* cache/* temp/* */logs/*",
    "doc": "jsdoc -c jsdoc.json",
    "format": "prettier --write '**/*.{js,json,md}'",
    "prepare": "husky install"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "body-parser": "^1.20.2",
    "child_process": "^1.0.2",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "express-rate-limit": "^7.1.3",
    "fs-extra": "^11.1.1",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "os": "^0.1.2",
    "path": "^0.12.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "chai": "^4.5.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jsdoc": "^4.0.2",
    "mocha": "^10.8.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "rewire": "^7.0.0",
    "rimraf": "^5.0.5",
    "sinon": "^20.0.0",
    "supertest": "^6.3.4"
  },
  "optionalDependencies": {
    "@chainlink/contracts": "^0.8.0",
    "@openzeppelin/contracts": "^4.9.3",
    "@uniswap/v2-core": "^1.0.1",
    "@uniswap/v2-periphery": "^1.1.0",
    "@uniswap/v3-core": "^1.0.1",
    "@uniswap/v3-periphery": "^1.4.3",
    "solady": "^0.0.123",
    "solmate": "^6.7.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/solidity-compiler-api.git"
  },
  "keywords": [
    "solidity",
    "ethereum",
    "compiler",
    "api",
    "smart-contracts",
    "blockchain"
  ],
  "author": "Rehan Shams",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yourusername/solidity-compiler-api/issues"
  },
  "homepage": "https://github.com/yourusername/solidity-compiler-api#readme"
}
